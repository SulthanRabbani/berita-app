# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Nama aplikasi yang akan ditampilkan di seluruh website
APP_NAME="Berita App"

# Environment: local untuk development, production untuk live website
APP_ENV=local

# Application key - akan di-generate otomatis dengan perintah 'php artisan key:generate'
APP_KEY=

# Debug mode: true untuk development, false untuk production
APP_DEBUG=true

# URL utama aplikasi - ganti sesuai domain Anda
APP_URL=http://localhost:8000

# Pengaturan bahasa
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Pengaturan maintenance
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Workers untuk PHP CLI server
PHP_CLI_SERVER_WORKERS=4

# Bcrypt rounds untuk password hashing
BCRYPT_ROUNDS=12

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# Database connection - pilih mysql untuk production atau sqlite untuk development
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=berita_app
DB_USERNAME=root
DB_PASSWORD=

# Untuk SQLite (development only), uncomment line di bawah dan comment MySQL settings
# DB_CONNECTION=sqlite
# DB_DATABASE=database/database.sqlite

# ==============================================================================
# SESSION CONFIGURATION
# ==============================================================================

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# ==============================================================================
# CACHE & QUEUE CONFIGURATION
# ==============================================================================

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database
# CACHE_PREFIX=

# ==============================================================================
# REDIS CONFIGURATION (Optional - untuk production scale)
# ==============================================================================

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==============================================================================
# MEMCACHED CONFIGURATION (Optional - untuk production scale)
# ==============================================================================

MEMCACHED_HOST=127.0.0.1

# ==============================================================================
# MAIL CONFIGURATION
# ==============================================================================

# Mail driver - gunakan 'smtp' untuk email sungguhan, 'log' untuk development
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@berita-app.com"
MAIL_FROM_NAME="${APP_NAME}"

# Untuk development, gunakan konfigurasi di bawah:
# MAIL_MAILER=log
# MAIL_HOST=127.0.0.1
# MAIL_PORT=2525
# MAIL_USERNAME=null
# MAIL_PASSWORD=null

# ==============================================================================
# GOOGLE OAUTH CONFIGURATION (REQUIRED)
# ==============================================================================

# Google OAuth credentials - dapatkan dari Google Cloud Console
# Tutorial: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL="${APP_URL}/auth/google/callback"

# ==============================================================================
# FILE STORAGE CONFIGURATION
# ==============================================================================

# Untuk production, gunakan 's3' atau 'public'. Untuk development gunakan 'local'
FILESYSTEM_DISK=public

# AWS S3 Configuration (untuk production dengan file storage cloud)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==============================================================================
# ADDITIONAL SERVICES (Optional)
# ==============================================================================

# Pusher untuk real-time features (optional)
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_APP_CLUSTER=mt1

# ==============================================================================
# FRONTEND BUILD CONFIGURATION
# ==============================================================================

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
